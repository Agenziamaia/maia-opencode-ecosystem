# ==========================================
# Hybrid Architecture Environment Variables
# ==========================================

# ------------------------------------------
# LOCAL ENVIRONMENT (Mac)
# ------------------------------------------

# Application
NODE_ENV=production
PORT=3000
GATEWAY_PORT=3001
LOG_LEVEL=info

# Redis (Local)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# SQLite Database
DATABASE_PATH=./data/hotel-bot.db

# Spoki WhatsApp API
SPOKI_API_KEY=your_spoki_api_key_here
SPOKI_WEBHOOK_SECRET=your_webhook_secret_here
SPOKI_API_BASE_URL=https://api.spoki.com/v1

# Smobu API
SMOBU_API_KEY=your_smobu_api_key_here
SMOBU_API_BASE_URL=https://api.smobu.com/v1
SMOBU_PROPERTY_ID=your_property_id

# Email Configuration (IMAP + SMTP)
EMAIL_IMAP_HOST=imap.gmail.com
EMAIL_IMAP_PORT=993
EMAIL_IMAP_USER=your_email@gmail.com
EMAIL_IMAP_PASSWORD=your_app_password
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_SMTP_USER=your_email@gmail.com
EMAIL_SMTP_PASSWORD=your_app_password

# OpenAI (for Concierge Q&A Agent)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview

# Agent Configuration
WELCOME_MESSAGE_DELAY_HOURS=24
KEY_DELIVERY_DELAY_HOURS=48
CHECKOUT_REMINDER_HOURS=24
REVIEW_REQUEST_DELAY_DAYS=1

# Webhook Configuration
WEBHOOK_TIMEOUT_MS=30000
WEBHOOK_RETRIES=3
WEBHOOK_RETRY_DELAY_MS=1000

# Job Queue Configuration
QUEUE_DEFAULT_JOB_OPTIONS_ATTEMPTS=3
QUEUE_DEFAULT_JOB_OPTIONS_BACKOFF_TYPE=exponential
QUEUE_DEFAULT_JOB_OPTIONS_BACKOFF_DELAY=1000

# Health Check
HEALTH_CHECK_INTERVAL_MS=30000

# Concurrency
WORKER_CONCURRENCY=5
MAX_CONCURRENT_WEBHOOKS=10
MAX_CONCURRENT_API_CALLS=20

# ------------------------------------------
# SERVICE MESH GATEWAY
# ------------------------------------------

# Gateway API Key (for Trigger.dev authentication)
GATEWAY_API_KEY=change_this_to_secure_random_string

# Encryption (for PII)
ENCRYPTION_KEY=generate_32_byte_random_key_here

# ------------------------------------------
# CLOUDFLARE TUNNEL
# ------------------------------------------

# Tunnel configuration (auto-generated by cloudflared)
CLOUDFLARE_TUNNEL_ID=your_tunnel_id
CLOUDFLARE_TUNNEL_TOKEN=your_tunnel_token
GATEWAY_PUBLIC_URL=https://bot.yourdomain.com

# ------------------------------------------
# BACKUP VPS
# ------------------------------------------

# VPS connection details
BACKUP_VPS_HOST=your-vps-ip
BACKUP_VPS_USER=root
BACKUP_VPS_SSH_KEY=/path/to/ssh/key
BACKUP_VPS_URL=http://your-vps-ip:3001

# Local Mac details (for VPS to connect)
LOCAL_MAC_IP=192.168.1.100
LOCAL_MAC_USER=g

# Backup retention
BACKUP_RETENTION_DAYS=7
BACKUP_SYNC_INTERVAL_MINUTES=15

# ------------------------------------------
# COOLIFY VPS
# ------------------------------------------

# VPS configuration
COOLIFY_URL=https://coolify.yourdomain.com
COOLIFY_API_KEY=your_coolify_api_key

# Grafana
GRAFANA_USER=admin
GRAFANA_PASSWORD=change_this_secure_password
GRAFANA_PORT=3001

# PostgreSQL (for analytics)
POSTGRES_DB=hotel_analytics
POSTGRES_USER=analytics
POSTGRES_PASSWORD=change_this_secure_password

# Redis replica configuration
REDIS_REPLICA_PASSWORD=your_redis_password

# ------------------------------------------
# TRIGGER.DEV
# ------------------------------------------

# Trigger.dev configuration
TRIGGER_DEV_URL=https://api.trigger.dev
TRIGGER_DEV_API_KEY=tr_dev_your_api_key_here
TRIGGER_DEV_PROJECT_ID=your_project_id

# Trigger.dev jobs
FLIGHTAWARE_API_KEY=your_flightaware_api_key
OPENWEATHER_API_KEY=your_openweather_api_key

# Cost monitoring
TRIGGER_DEV_BUDGET=5.00
TRIGGER_DEV_WARN_THRESHOLD=4.00

# Pause/Resume configuration
TRIGGER_DEV_PAUSE_HOUR=2
TRIGGER_DEV_RESUME_HOUR=8

# ------------------------------------------
# NOTIFICATIONS
# ------------------------------------------

# Slack webhook (for alerts)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/webhook/url

# Email alerts
ALERT_EMAIL=admin@yourdomain.com
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# ------------------------------------------
# DEVELOPMENT OPTIONS
# ------------------------------------------

# Toggle features
ENABLE_ANALYTICS=true
ENABLE_PREDICTIVE_MESSAGING=true
ENABLE_UPSELL_AGENT=true
ENABLE_TRANSLATION_AGENT=true

# Debugging
DEBUG_MODE=false
VERBOSE_LOGGING=false

# Testing
TEST_MODE=false
MOCK_EXTERNAL_APIS=false

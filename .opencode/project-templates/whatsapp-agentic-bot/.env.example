# Environment Configuration
# Copy this file to .env and fill in your values

# Server Configuration
PORT=3000
NODE_ENV=development
LOG_LEVEL=info

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Database Configuration
DB_PATH=./data/bot.db

# WhatsApp API Configuration
# TODO: Add your WhatsApp API credentials
WHATSAPP_API_KEY=your_api_key_here
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id_here
WHATSAPP_WEBHOOK_VERIFY_TOKEN=your_verify_token_here
WHATSAPP_WEBHOOK_SECRET=your_webhook_secret_here

# AI/LLM Configuration
# TODO: Add your AI provider credentials
OPENAI_API_KEY=your_openai_key_here
# Or use another provider like Anthropic
# ANTHROPIC_API_KEY=your_anthropic_key_here

# External Service Integration
# TODO: Add your external service credentials
# Example: PMS system, booking engine, etc.
PMS_API_KEY=your_pms_key_here
PMS_API_URL=https://your-pms-system.com/api

# Launchd Configuration
LAUNCHD_SERVICE_NAME=com.hotelbot.whatsapp-agentic-bot
LAUNCHD_WORKING_DIRECTORY=/path/to/your/project
LAUNCHD_LOG_PATH=/path/to/your/project/logs
